@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>

<table class="table table-bordered table-striped table-sm table-hover m-1 p-1">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
    </tr>
    @if (Model.Count()==0)
    {
        <tr>
            <td colspan="3" class="alert alert-warning">
                No Users
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-primary">
    Create User
</a>
